# -*- makefile -*-
# -----------------------------------------------------------------------
# -----------------------------------------------------------------------

all: onf-lib local

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
repo-onf-make := https://github.com/opencord/onf-make.git
onf-lib:
	git submodule add $(repo-onf-make) $@

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
local:
	mkdir -p $@
	umask 022 && chmod 755
	git add $@

# local:

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
# sterile ::
#	git rm -f onf

# [EOF]
